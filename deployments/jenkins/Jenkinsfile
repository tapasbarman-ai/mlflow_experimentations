pipeline {
    agent any

    environment {
        SCANNER_HOME = tool 'SonarScanner'
        APP_NAME = "bike-demand-predictor"
        
        // --- FIXED: Using 'localhost' for Docker Registry because Jenkins uses the host's Docker socket ---
        // --- and 'sonarqube' service name for internal container communication ---
        NEXUS_REGISTRY = "localhost:8082"
        SONAR_HOST = "sonarqube"
        
        DOCKER_IMAGE = "${NEXUS_REGISTRY}/${APP_NAME}"
        NEXUS_CREDENTIALS_ID = 'nexus-creds'
        REPO_URL = "https://github.com/tapasbarman-ai/mlflow_experimentations.git"
    }

    stages {
         stage('1. Git Checkout') {
            steps {
                deleteDir()
                git branch: 'main', url: "${REPO_URL}"
                sh 'git config --global --add safe.directory "*"'
            }
        }

        stage('2. Secrets Detection (Gitleaks)') {
            steps {
                sh 'docker run --rm --volumes-from jenkins -w $(pwd) zricethezav/gitleaks:latest detect --source . --verbose --redact || true'
            }
        }

        stage('3. SAST (Semgrep)') {
            steps {
                sh 'docker run --rm --volumes-from jenkins -w $(pwd) returntocorp/semgrep semgrep scan --config auto --output semgrep-report.json || true'
            }
        }

        stage('4. SCA (OWASP Dependency Check)') {
            steps {
                dependencyCheck additionalArguments: "--nvdApiKey 1b973089-f6a8-4113-a19a-fed0f71e99ab --format HTML --format JSON --format XML", odcInstallation: 'DP-Check'
                dependencyCheckPublisher pattern: 'dependency-check-report.xml'
            }
        }

        stage('5. Static Analysis (SonarQube)') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                    sh "${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=bike-sharing-mlops \
                        -Dsonar.sources=src/ \
                        -Dsonar.host.url=http://${SONAR_HOST}:9000 \
                        -Dsonar.login=\$SONAR_TOKEN"
                }
            }
        }

        stage('7. Build Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${BUILD_NUMBER} -f deployments/docker/Dockerfile ."
                    sh "docker tag ${DOCKER_IMAGE}:${BUILD_NUMBER} ${DOCKER_IMAGE}:latest"
                }
            }
        }

        stage('8. Image Scan (Trivy)') {
            steps {
                sh "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock --volumes-from jenkins -w \$(pwd) aquasec/trivy image --severity HIGH,CRITICAL --format json --output trivy-report.json ${DOCKER_IMAGE}:${BUILD_NUMBER}"
            }
        }

        stage('9. Push to Nexus') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${NEXUS_CREDENTIALS_ID}", usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        sh "echo \$PASS | docker login -u \$USER --password-stdin ${NEXUS_REGISTRY}"
                        sh "docker push ${DOCKER_IMAGE}:${BUILD_NUMBER}"
                        sh "docker push ${DOCKER_IMAGE}:latest"
                    }
                }
            }
        }

        stage('10. DAST (OWASP ZAP)') {
            steps {
                sh "docker run --rm --volumes-from jenkins -w \$(pwd) -t owasp/zap2docker-stable zap-baseline.py -t http://${SONAR_HOST}:9000 -r zap-report.html || true"
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '*.json, *.html, artifacts/**/*', allowEmptyArchive: true
            echo 'Archiving all security reports and MLOps artifacts...'
        }
    }
}
