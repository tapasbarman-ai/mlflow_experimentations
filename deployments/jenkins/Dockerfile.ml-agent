# Custom MLOps Build Agent
FROM python:3.9-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Pre-install key MLOps libraries for faster builds
RUN pip install --no-cache-dir \
    mlflow \
    dvc[all] \
    scikit-learn \
    pandas \
    evidently \
    fastapi \
    uvicorn \
    requests \
    matplotlib

# Default command
CMD ["python3"]
